{
    "root": true,
    /**
     * ES6 Support
     * @see {@link http://eslint.org/docs/user-guide/configuring#specifying-parser-options}
     */
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": false,
            "binaryLiterals": false,
            "blockBindings": false,
            "classes": false,
            "defaultParams": false,
            "destructuring": false,
            "forOf": false,
            "generators": false,
            "modules": false,
            "objectLiteralComputedProperties": false,
            "objectLiteralDuplicateProperties": false,
            "objectLiteralShorthandMethods": false,
            "objectLiteralShorthandProperties": false,
            "octalLiterals": false,
            "regexUFlag": false,
            "regexYFlag": false,
            "spread": false,
            "superInFunctions": false,
            "templateStrings": false,
            "unicodeCodePointEscapes": false,
            "globalReturn": false,
            "jsx": true
        }
    },

    /**
     * Environment
     * @see {@link http://eslint.org/docs/user-guide/configuring#specifying-environments}
     */
    "env": {
        "browser": true,
        "node": true,
        "amd": true,
        "mocha": true,
        "jasmine": false,
        "phantomjs": false,
        "jquery": true,
        "prototypejs": false,
        "shelljs": false,
        "meteor": false,
        "es6": true
    },

    /**
     * Custom Globals
     * @see {@link http://eslint.org/docs/user-guide/configuring#specifying-globals}
     */
    "globals": {
        // Edap
        "analyticsdatalayer": true,

        // Jasmine Jquery
        "sandbox": false,
        "setFixtures": true,
        "setStyleFixtures": true,
        "loadFixtures": true,
        "appendSetFixtures": true,

        // graphql
        "graphql": true
    },

    "plugins": ["emotion", "react", "prettier"],

    /**
     * ESHint Parser
     * @see {@link http://eslint.org/docs/user-guide/configuring#specifying-parser}
     */
    "parser": "babel-eslint",

    /**
     * Rules
     * @see {@link http://eslint.org/docs/rules/}
     */
    "rules": {
        /**
         * Possible Errors
         * @see {@link http://eslint.org/docs/rules/#possible-errors}
         */
        "comma-dangle": [2, "only-multiline"],
        "no-cond-assign": [2, "always"],
        "no-constant-condition": 1,
        "no-control-regex": 1,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-empty-character-class": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": 0,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-inner-declarations": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "quote-props": 0,
        "use-isnan": 2,
        "valid-jsdoc": 0,
        "valid-typeof": 2,

        /**
         * Best Practices
         * @see {@link http://eslint.org/docs/rules/#best-practices}
         */
        "block-scoped-var": 2,
        "complexity": [1, 5],
        "consistent-return": 2,
        "curly": [2, "all"],
        "default-case": 2,
        "dot-notation": [
            2,
            {
                "allowKeywords": true,
                "allowPattern": ""
            }
        ],
        "eqeqeq": 2,
        "guard-for-in": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-div-regex": 2,
        "no-else-return": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-iterator": 2,
        "no-labels": 1,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-new": 0,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-param-reassign": 0,
        "no-process-env": 0,
        "no-proto": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 0,
        "no-unused-expressions": 2,
        "no-void": 2,
        "no-warning-comments": [
            0,
            {
                "terms": ["todo", "fixme"],
                "location": "anywhere"
            }
        ],
        "no-with": 2,
        "radix": 2,
        "vars-on-top": 2,
        "wrap-iife": [2, "any"],
        "yoda": [
            2,
            "never",
            {
                "exceptRange": true
            }
        ],

        /**
         * Strict Mode
         * @see {@link http://eslint.org/docs/rules/#strict-mode}
         */
        "global-strict": 0,
        "no-extra-strict": 0,

        /**
         * Variables
         * @see {@link http://eslint.org/docs/rules/#variables}
         */
        "no-catch-shadow": 2,
        "no-delete-var": 2,
        "no-label-var": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-undefined": 2,
        "no-unused-vars": [
            2,
            {
                "vars": "all",
                "args": "after-used"
            }
        ],
        "no-use-before-define": 2,

        /**
         * Node.js
         * @see {@link http://eslint.org/docs/rules/#node.js}
         */
        "handle-callback-err": 0,
        "no-mixed-requires": 0,
        "no-new-require": 0,
        "no-path-concat": 0,
        "no-process-exit": 0,
        "no-restricted-modules": 0,
        "no-sync": 0,

        /**
         * Stylistic
         * @see {@link http://eslint.org/docs/rules/#stylistic-issues}
         */
        "indent": [2, 4, {"SwitchCase": 1}],
        "array-bracket-spacing": [2, "never"],
        "brace-style": [2, "1tbs"],
        "camelcase": [
            2,
            {
                "properties": "never"
            }
        ],
        "comma-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ],
        "comma-style": [2, "last"],
        "consistent-this": [0, "self"],
        "eol-last": 0,
        "func-names": 0,
        "func-style": 0,
        "key-spacing": [
            2,
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "keyword-spacing": 2,
        "max-nested-callbacks": [1, 5],
        "new-cap": [
            2,
            {
                "capIsNewExceptions": ["Deferred", "Event", "Q"]
            }
        ],
        "new-parens": 2,
        "newline-after-var": 0,
        "no-array-constructor": 2,
        "no-continue": 0,
        "no-inline-comments": 0,
        "no-lonely-if": 1,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [
            1,
            {
                "max": 2
            }
        ],
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-ternary": 0,
        "no-trailing-spaces": 1,
        "no-underscore-dangle": 0,
        "object-curly-spacing": [2, "never"],
        "operator-assignment": 0,
        "operator-linebreak": 0,
        "padded-blocks": [1, "never"],
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "semi-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ],
        "sort-vars": [
            0,
            {
                "ignoreCase": true
            }
        ],
        "space-before-blocks": 2,
        "space-before-function-paren": [2, "never"],
        "space-in-parens": [2, "never"],
        "space-infix-ops": 2,
        "space-unary-ops": [
            1,
            {
                "words": true,
                "nonwords": false
            }
        ],
        "spaced-comment": 1,
        "wrap-regex": 1,

        /**
         * ES6
         * @see {@link http://eslint.org/docs/rules/#ecmascript-6}
         */
        "generator-star": 0,

        /**
         * Legacy
         * @see {@link http://eslint.org/docs/rules/#legacy}
         */
        "max-depth": 0,
        "max-len": 0,
        "max-params": 0,
        "max-statements": 0,
        "no-bitwise": 2,
        "no-plusplus": 0,

        /**
         * Node 6
         */

        "strict": ["error", "global"],

        "no-console": ["warn"],

        /**
         * ES6
         */

        "arrow-parens": 2,
        "arrow-spacing": [
            2,
            {
                "before": true,
                "after": true
            }
        ],
        "constructor-super": 2,
        "generator-star-spacing": [
            2,
            {
                "before": true,
                "after": false
            }
        ],
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-this-before-super": 2,
        "no-var": 2,
        "object-shorthand": 2,
        "one-var": [1, "never"],
        "prefer-arrow-callback": 2,
        "prefer-const": 0,
        "prefer-spread": 1,
        "prefer-reflect": 0,
        "prefer-template": 1,
        "require-yield": 2,
        "template-curly-spacing": ["error", "never"],

        /**
         * REACT
         */

        "jsx-quotes": [2, "prefer-double"],
        "react/display-name": 0, // Force displayName debugging attribute to all react classes
        "react/forbid-prop-types": 1,
        "react/jsx-boolean-value": 1,
        "react/jsx-closing-bracket-location": 1,
        "react/jsx-curly-spacing": 1,
        "react/jsx-indent-props": 1,
        "react/jsx-max-props-per-line": 0,
        "react/jsx-no-bind": [0, {"ignoreRefs": true}],
        "react/jsx-no-duplicate-props": 1,
        "react/jsx-no-literals": 0,
        "react/jsx-no-undef": 1,
        "react/jsx-sort-prop-types": 0,
        "react/jsx-sort-props": 0,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/jsx-wrap-multilines": 1,
        "react/no-danger": 1,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/no-direct-mutation-state": 1,
        "react/no-multi-comp": [1, {"ignoreStateless": true}],
        "react/no-set-state": 0,
        "react/no-unknown-property": 1,
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 1,
        "react/self-closing-comp": 1,
        "react/sort-comp": 1,

        "emotion/jsx-import": "error",
        "emotion/no-vanilla": "error",
        "emotion/import-from-emotion": "error",
        "emotion/styled-import": "error",

        "prettier/prettier": 2
    }
}
